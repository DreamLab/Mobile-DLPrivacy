source 'https://github.com/CocoaPods/Specs.git'
source 'ssh://git@stash.grupa.onet:7999/pod/dlinternalcocoapods.git'

use_frameworks!
inhibit_all_warnings!

def common_pods
    platform :ios, '9.0'
    # List pods here
    pod 'DLMessageBus', '~> 3.0.0'
    pod 'DLDeviceHelper', '~> 3.0.0'
    pod 'DLConfigReader', '~> 3.0.0'
    pod 'DLCocoaLumberjackHelper', '~> 3.0.0'
    pod 'DLAppHelper', '~> 3.0.0'
    pod 'DLUIExtensions', '~> 3.0.0'
    pod 'SwiftLint', '~> 0.18.1'
end

def fabric_pods
    pod 'Fabric'
    pod 'Crashlytics'
end

target 'DLRib' do
    common_pods
    fabric_pods
end

target 'DLRibTests' do
    common_pods
    fabric_pods
end

target 'DLRibUI' do
    common_pods
    fabric_pods
    pod 'DLRemoteControl', '~> 3.0.0'
end

target 'DLRibUITests' do
    platform :ios, '9.0'
    pod 'DLTestHelpers', '~> 3.0.0'
end

